{
  "rules": {
    "queues": {
      "$action": {
        "results": {
          "$resultId": {
            ".read": "true",
            ".write": "auth.uid === data.child('uid').val()"
          }
        },
        "tasks": {
          "$taskId": {
            ".write": "auth.uid === newData.child('payload').child('uid').val()"
          },
          ".indexOn": "_state"
        }
      }
    },
    "users": {
      "$uid": {
        "info": {
          ".read": "auth.uid === $uid"
        }
      }
    }
  }
}